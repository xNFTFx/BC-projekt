@{
    Layout = "~/Views/Shared/ZamowienieLayout.cshtml";
    ViewBag.Title = "Zamówienia";
}

<h2 class="mb-4">Twoje zamówienia</h2>

@{
    var zamowienia = new[]
    {
        new { Nazwa = "Latte Macchiato", Ilosc = 2, Cena = 18.99 },
        new { Nazwa = "Espresso", Ilosc = 1, Cena = 9.99 },
        new { Nazwa = "Cappuccino", Ilosc = 3, Cena = 14.50 }
    };
}

@foreach (var item in zamowienia)
{
    <div class="card">
        <div class="card-title">@item.Nazwa</div>
        <div class="product-details">
            <div>Ilość: @item.Ilosc</div>
            <div>Cena: @String.Format("{0:C}", item.Cena * item.Ilosc)</div>
        </div>
    </div>
}

<div class="text-center mt-4">
    <button class="btn btn-pay" onclick="window.location.href='/Home/Index'">
        Zamów i zapłać
    </button>

</div>

